<Window x:Class="MultiRoblox.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Multi Roblox - Spooky Edition"
        Height="640"
        Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PumpkinGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B00" Offset="0"/>
            <GradientStop Color="#FF8C00" Offset="0.5"/>
            <GradientStop Color="#FFA500" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="SpookyPurple" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A0E4E" Offset="0"/>
            <GradientStop Color="#6B1B6F" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="HalloweenBg" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0A0A0A" Offset="0"/>
            <GradientStop Color="#1A0F1A" Offset="0.5"/>
            <GradientStop Color="#0F0A0F" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="SpookyButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF6B00"/>
            <Setter Property="Padding" Value="16,9"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PumpkinGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#000000"/>
                    <Setter Property="BorderBrush" Value="#FFA500"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF6B00"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="7">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PumpkinGradient}"/>
                    <Setter Property="Foreground" Value="#000000"/>
                    <Setter Property="BorderBrush" Value="#FFA500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SpookyPurple}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="7" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#6B1B6F" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5A1E5E" Offset="0"/>
                                <GradientStop Color="#7B2B7F" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A1A1A"/>
                    <Setter Property="Foreground" Value="#FFA500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource TitleButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C41E3A"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HauntedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0F0F0F"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF6B00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CaretBrush" Value="#FF8C00"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="7">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}" 
                                        VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FFA500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource HalloweenBg}" CornerRadius="14" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect Color="#FF6B00" BlurRadius="35" ShadowDepth="0" Opacity="0.45"/>
        </Border.Effect>
        <Grid>
            <!-- Background Effects -->
            <Canvas ClipToBounds="True" IsHitTestVisible="False">
                <Ellipse Width="300" Height="300" Canvas.Left="-70" Canvas.Top="-70" Opacity="0.1">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF6B00" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse Width="320" Height="320" Canvas.Right="-90" Canvas.Bottom="-90" Opacity="0.07">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#6B1B6F" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Border Grid.Row="0" Background="#0D0D0D" CornerRadius="14,14,0,0" 
                        BorderBrush="#FF6B00" BorderThickness="0,0,0,2" 
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF6B00" BlurRadius="15" ShadowDepth="0" Opacity="0.35"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                            <Border Width="38" Height="38" CornerRadius="9" 
                                    Background="{StaticResource PumpkinGradient}" Margin="0,0,14,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF6B00" BlurRadius="16" ShadowDepth="0" Opacity="0.7"/>
                                </Border.Effect>
                                <TextBlock Text="ðŸŽƒ" FontSize="24" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Multi Roblox" FontSize="16" FontWeight="Bold" Foreground="#FF8C00">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FF6B00" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="ðŸŽƒ Spooky Edition ðŸ‘»" Foreground="#FFA500" 
                                         FontSize="10" Margin="0,-2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="MinBtn" Content="&#xE921;" Style="{StaticResource TitleButton}" 
                                    Click="MinBtn_Click" ToolTip="Minimize"/>
                            <Button x:Name="MaxBtn" Content="&#xE922;" Style="{StaticResource TitleButton}" 
                                    Click="MaxBtn_Click" ToolTip="Maximize"/>
                            <Button x:Name="CloseBtn" Content="&#xE8BB;" Style="{StaticResource CloseButton}" 
                                    Click="CloseBtn_Click" ToolTip="Close"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="1" Margin="20,16,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Accounts List -->
                    <Grid Grid.Column="0" Margin="0,0,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Account Header -->
                        <Border Grid.Row="0" Background="#1A1A1A" CornerRadius="9" 
                                BorderBrush="#FF6B00" BorderThickness="2" Padding="16,12" Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <TextBlock Text="ðŸ‘» YOUR HAUNTED ACCOUNTS" Foreground="#FF8C00" 
                                         FontSize="13" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock x:Name="AccountCountText" Text="0 Accounts" Foreground="#999999" 
                                         FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Accounts List -->
                        <Border Grid.Row="1" Background="#0F0F0F" BorderBrush="#FF6B00" 
                                BorderThickness="2" CornerRadius="9">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="2">
                                <ItemsControl x:Name="AccountList" Margin="10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1A1A1A" CornerRadius="7" BorderBrush="#FF6B00" 
                                                    BorderThickness="2" Margin="0,0,0,10" Padding="14" 
                                                    Cursor="Hand" MouseLeftButtonDown="AccountItem_Click">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#FF6B00" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                                                </Border.Effect>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#242424"/>
                                                                <Setter Property="BorderBrush" Value="#FFA500"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Width="42" Height="42" CornerRadius="21" 
                                                            Background="{StaticResource PumpkinGradient}" Margin="0,0,14,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="#FF6B00" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                                        </Border.Effect>
                                                        <TextBlock Text="ðŸŽƒ" FontSize="24" 
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Username}" Foreground="#FFFFFF" 
                                                                 FontSize="14" FontWeight="SemiBold" 
                                                                 TextTrimming="CharacterEllipsis" Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding Description}" Foreground="#999999" 
                                                                 FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Account Actions -->
                        <Border Grid.Row="2" Background="#1A1A1A" CornerRadius="9" 
                                BorderBrush="#FF6B00" BorderThickness="2" Padding="14,11" Margin="0,10,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="AddAccountBtn" Style="{StaticResource SpookyButton}" 
                                            Click="AddAccountBtn_Click" Padding="16,9" Margin="0,0,10,0">
                                        <TextBlock Text="+ Add Account" VerticalAlignment="Center"/>
                                    </Button>
                                    <Button x:Name="RemoveAccountBtn" Content="ðŸ—‘ Remove" 
                                            Style="{StaticResource SpookyButton}" 
                                            Click="RemoveAccountBtn_Click" Padding="16,9"/>
                                </StackPanel>
                                <CheckBox x:Name="HideUsernamesCheckBox" Content="Hide Usernames" 
                                        Foreground="#999999" HorizontalAlignment="Right" 
                                        VerticalAlignment="Center" FontSize="12" 
                                        Checked="HideUsernamesCheckBox_Changed" 
                                        Unchecked="HideUsernamesCheckBox_Changed"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Right Panel - Controls -->
                    <Border Grid.Column="1" Background="#0F0F0F" CornerRadius="9" 
                            BorderBrush="#FF6B00" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF6B00" BlurRadius="18" ShadowDepth="0" Opacity="0.35"/>
                        </Border.Effect>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="2">
                            <StackPanel Margin="13">
                                <!-- Current Place Section -->
                                <Border Background="{StaticResource SpookyPurple}" CornerRadius="8" 
                                        Padding="13" Margin="0,0,0,12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#6B1B6F" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="ðŸŒ™ CURRENT PLACE" Foreground="#FFA500" 
                                                 FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <TextBlock Text="Place ID" Foreground="#CCCCCC" 
                                                 FontSize="10" Margin="0,0,0,5"/>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="PlaceIdTextBox" Grid.Column="0" 
                                                   Style="{StaticResource HauntedTextBox}" 
                                                   Padding="9,7" FontSize="12"/>
                                            <Button Grid.Column="2" x:Name="SavedPlacesBtn" Content="ðŸ“‹" 
                                                  Style="{StaticResource IconButton}" 
                                                  Click="SavedPlacesBtn_Click" ToolTip="Saved Places"/>
                                        </Grid>
                                        <TextBlock Text="Job ID (Private Server)" Foreground="#CCCCCC" 
                                                 FontSize="10" Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="JobIdTextBox" Grid.Column="0" 
                                                   Style="{StaticResource HauntedTextBox}" 
                                                   Padding="9,7" FontSize="12" Text=""/>
                                            <Button Grid.Column="2" x:Name="SaveJobBtn" Content="ðŸ’¾" 
                                                  Style="{StaticResource IconButton}" 
                                                  Click="SaveJobBtn_Click" ToolTip="Save Job ID"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Main Action Buttons -->
                                <Button x:Name="JoinServerBtn" Content="ðŸŽƒ Join Server" 
                                        Style="{StaticResource SpookyButton}" HorizontalAlignment="Stretch" 
                                        Click="JoinServerBtn_Click" Padding="13,9" Margin="0,0,0,8"/>
                                <Button x:Name="SettingsBtn" Content="âš™ï¸ Settings" 
                                        Style="{StaticResource SpookyButton}" HorizontalAlignment="Stretch" 
                                        Click="SettingsBtn_Click" Padding="13,9" Margin="0,0,0,14"/>

                                <!-- Quick Actions Section -->
                                <TextBlock Text="âš¡ QUICK ACTIONS" Foreground="#FF8C00" 
                                         FontSize="11" FontWeight="Bold" Margin="0,0,0,9"/>
                                <Border Background="#1A1A1A" CornerRadius="8" BorderBrush="#FF6B00" 
                                        BorderThickness="2" Padding="11" Margin="0,0,0,12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF6B00" BlurRadius="10" ShadowDepth="0" Opacity="0.25"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <Button x:Name="LaunchAllBtn" Content="ðŸš€ Launch All Accounts" 
                                                Style="{StaticResource GhostButton}" HorizontalAlignment="Stretch" 
                                                Click="LaunchAllBtn_Click" Padding="11,7" FontSize="11" Margin="0,0,0,7"/>
                                        <Button x:Name="RefreshAccountsBtn" Content="ðŸ”„ Refresh Accounts" 
                                                Style="{StaticResource GhostButton}" HorizontalAlignment="Stretch" 
                                                Click="RefreshAccountsBtn_Click" Padding="11,7" FontSize="11" Margin="0,0,0,7"/>
                                        <Button x:Name="ManageDataBtn" Content="ðŸ“ Manage Data" 
                                                Style="{StaticResource GhostButton}" HorizontalAlignment="Stretch" 
                                                Click="ManageDataBtn_Click" Padding="11,7" FontSize="11"/>
                                    </StackPanel>
                                </Border>

                                <!-- Preferences Section -->
                                <TextBlock Text="ðŸŽ¨ PREFERENCES" Foreground="#FF8C00" 
                                         FontSize="11" FontWeight="Bold" Margin="0,0,0,9"/>
                                <Border Background="#1A1A1A" CornerRadius="8" BorderBrush="#FF6B00" 
                                        BorderThickness="2" Padding="11">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF6B00" BlurRadius="10" ShadowDepth="0" Opacity="0.25"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <Button x:Name="ThemeBtn" Content="ðŸŽƒ Change Theme" 
                                                Style="{StaticResource GhostButton}" HorizontalAlignment="Stretch" 
                                                Click="ThemeBtn_Click" Padding="11,7" FontSize="11" Margin="0,0,0,7"/>
                                        <Button x:Name="BrowserBtn" Content="ðŸŒ Browser Settings" 
                                                Style="{StaticResource GhostButton}" HorizontalAlignment="Stretch" 
                                                Click="BrowserBtn_Click" Padding="11,7" FontSize="11" Margin="0,0,0,7"/>
                                        <Button x:Name="AutoLaunchBtn" Content="âš™ï¸ Auto-Launch" 
                                                Style="{StaticResource GhostButton}" HorizontalAlignment="Stretch" 
                                                Click="AutoLaunchBtn_Click" Padding="11,7" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
